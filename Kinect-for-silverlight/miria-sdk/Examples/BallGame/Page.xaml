<UserControl x:Class="BallGame.Page"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:miria="clr-namespace:MIRIA.UIKit;assembly=MIRIA-UI"
    Width="400" Height="300">

    <Canvas x:Name="Main" Background="Transparent">
        <TextBlock x:Name="score" FontSize="48" Text="0" TextAlignment="Center" Foreground="Red" />
        <Ellipse x:Name="ball" Width="50" Height="50" Fill="Orange"></Ellipse>
        <Canvas x:Name="cursor" Width="200" Height="20">
            <Image Width="200" Height="20" Source="http://win.generoso.info/MIRIA-Web/Images/ipod.jpg" Stretch="Fill"></Image>
        </Canvas>


    </Canvas>

</UserControl>
