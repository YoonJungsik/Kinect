<UserControl x:Class="MIRIA.Interaction.MultiTouch.FingerAura"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    Width="50" Height="50">
    <!-- ジェ一ネ -->
    <Grid x:Name="LayoutRoot" Background="Transparent" Opacity="0.2">
    	<Ellipse x:Name="Aura" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Opacity="0.745" StrokeThickness="2" Stroke="#FFEFFF00" StrokeDashArray="5 2.3 1 2.3" Stretch="Fill" StrokeDashCap="Round" Margin="0">
            <Ellipse.Effect>
                <DropShadowEffect BlurRadius="40" ShadowDepth="5"  Direction="-90"/>
    		</Ellipse.Effect>
    	</Ellipse>
        <Ellipse Height="2" Margin="0,0,2.5,2.5" Width="2" Opacity="0.5" StrokeThickness="5" Stroke="#FF000000" Stretch="Fill" />
        <TextBlock x:Name="TextLabel" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="40" FontWeight="ExtraBlack" Foreground="Violet"></TextBlock>
    </Grid>
</UserControl>
