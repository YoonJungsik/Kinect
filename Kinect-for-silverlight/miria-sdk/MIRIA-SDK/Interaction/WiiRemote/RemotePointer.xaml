<UserControl x:Class="MIRIA.Interaction.WiiRemote.RemotePointer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    >

    <Grid x:Name="LayoutRoot" Background="Transparent">

        <Ellipse x:Name="Circle" Visibility="Collapsed" Stroke="Orange" StrokeThickness="6" Width="70" Height="70" Opacity="0.5"></Ellipse>
        <Image Opacity="0.8" Width="56" Height="56" Margin="-10,-2,0,0" Source="/MIRIA;component/Images/hand.png"></Image>
        <TextBlock x:Name="TextLabel" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,30,0,0" FontSize="16" FontWeight="ExtraBlack" Foreground="Purple"></TextBlock>
    </Grid>
</UserControl>
