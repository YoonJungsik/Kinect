<UserControl x:Class="MIRIA.Interaction.NiteKinect.UserHand"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="100" Height="100">
    
    <Grid x:Name="LayoutRoot" Background="Transparent">
        
        <Ellipse x:Name="Circle" Visibility="Collapsed" Stroke="Yellow" StrokeThickness="12" Width="100" Height="100" Opacity="0.5"></Ellipse>
        <Ellipse x:Name="CircleSelectO" Visibility="Collapsed" Stroke="BlueViolet" StrokeThickness="6" Width="90" Height="90" Opacity="0.5"></Ellipse>
        <Ellipse x:Name="CircleSelectI" Visibility="Collapsed" Stroke="Fuchsia" StrokeThickness="6" Width="70" Height="70" Opacity="0.5"></Ellipse>
        <Image Opacity="0.8" Width="56" Height="56" Margin="-10,-2,0,0" Source="/MIRIA;component/Images/hand.png"></Image>
        <TextBlock x:Name="TextLabel" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,30,0,0" FontSize="16" FontWeight="ExtraBlack" Foreground="Purple"></TextBlock>
        
    </Grid>
</UserControl>
